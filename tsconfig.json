{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["app/shared/*"]
    },
    "outDir": "./dist/out-tsc",
    "rootDir": "./src",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2020",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "module": "esnext",
    "allowSyntheticDefaultImports": true
  }
}
