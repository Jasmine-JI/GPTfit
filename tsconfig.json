{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["app/shared/*"]
    },
    "outDir": "./dist/out-tsc",
    "rootDir": "./src",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "ES2022",
    "typeRoots": ["node_modules/@types"],
    "lib": ["ES6", "dom", "esnext.asynciterable"],
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": false
  }
}
